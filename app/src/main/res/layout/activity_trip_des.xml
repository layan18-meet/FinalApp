<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mapbckg"
    tools:context=".TripDesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tripName2TV"
            android:layout_width="510dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            android:text="Trip Name"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/whitelogo" />

    </LinearLayout>

    <TextView
        android:id="@+id/plannedDaysTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Planned Days"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/addDayToList"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/plusbutton" />

    <ListView
        android:id="@+id/plannedDaysLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>